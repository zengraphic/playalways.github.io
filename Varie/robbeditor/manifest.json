{
    "manifest_version": 2,

    "name": "Edit Everything",
    "description": "This extension allow you to edit and change font sizes",
    "version": "1.0",

    "browser_action": {
        "default_icon": "/img/robbeditor.png",
        "default_popup": "/html/htmlrobbeditor.html",
        "default_title": "Click here!"
    },
    "background": {
        "scripts": ["/js/jquery.js", "/js/background.js"]
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],
    "content_scripts": [{
        "matches": ["http://*/*"],
        "css": ["css/robbeditor.css"],
        "js": ["/js/jquery.js", "/js/robbeditor.js"]
    }]
}
